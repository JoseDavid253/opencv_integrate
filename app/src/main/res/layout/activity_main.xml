<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3CCD1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewIni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Selecciona o toma una foto y presiona la imagen"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:onClick="loadImagenesLayout"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/precargada" />

    <Button
        android:id="@+id/btn_Galeria"
        android:layout_width="225dp"
        android:layout_height="76dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#21088F"
        android:text="Galeria"
        android:textSize="24sp"
        app:icon="@drawable/baseline_add_to_photos_24"
        app:iconGravity="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewBtn"
        android:layout_width="116dp"
        android:layout_height="76dp"
        android:layout_marginStart="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Galeria"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_Galeria"
        app:layout_constraintTop_toTopOf="@+id/btn_Galeria"
        app:srcCompat="@drawable/camara2" />

</androidx.constraintlayout.widget.ConstraintLayout>